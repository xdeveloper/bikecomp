<resources>

    <!-- Base application theme. -->
    <style name="BikeCompTheme_Dark" parent="Base.Theme.AppCompat">
        <item name="indicator_textColor">#FFF</item>
        <item name="indicator_textSize">100sp</item>

    </style>

    <style name="BikeCompTheme_Light" parent="Base.Theme.AppCompat.Light">
        <item name="indicator_textColor">#555</item>
        <item name="indicator_textSize">100sp</item>

    </style>

    <attr name="indicator_textColor" format="color" />
    <attr name="indicator_textSize" format="dimension" />


    <style name="report_first_column">
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">4dp</item>
    </style>

    <style name="report_row_margin">
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="button_standard">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/button_selector</item>
    </style>

</resources>
